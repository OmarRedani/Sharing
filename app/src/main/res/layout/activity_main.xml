<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/first_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/BackG">
        <ImageButton
            android:id="@+id/btnH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calcul"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/second_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/BackG">
        <Button
            android:id="@+id/btn_transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transfer_result"
            android:onClick="transfer"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_above="@id/second_container"
        android:layout_below="@id/first_container"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/op1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="30"
            android:layout_margin="5dp"
            android:hint="@string/hint1"
            android:textSize="30sp"
            android:inputType=""/>
        <EditText
            android:id="@+id/op2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="30"
            android:layout_margin="5dp"
            android:hint="@string/hint1"
            android:textSize="30sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <Button
                android:id="@+id/btn_addition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op1"
                android:textSize="25sp"
                android:onClick="btn_addition"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/btn_multiplication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op3"
                android:textSize="25sp"
                android:onClick="btn_multiplication"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/btn_subtraction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op2"
                android:textSize="25sp"
                android:onClick="btn_subtraction"
                android:layout_margin="10dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_margin="10dp"
            />
    </LinearLayout>



</RelativeLayout>